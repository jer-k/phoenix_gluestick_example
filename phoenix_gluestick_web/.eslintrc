{
    "parser": "babel-eslint",
    "rules": {
        "indent": [
            2,
            4,
            {"SwitchCase": 1}
        ],
        "quotes": [
            2,
            "double"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-unused-vars": 0,
        "eol-last": 2
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
    },
    "plugins": [
        "react"
    ],
    "globals": {
        "document": true,
        "React": true,
        "ReactDOM": true,
        "window": true,
        "describe": true,
        "expect": true,
        "it": true,
        "TestUtils": true,
        "sinon": true,
        "beforeEach": true,
        "afterEach": true,
        "before": true,
        "after": true
    }
}

